{
	Game.Events:
	{
		Taxes: Game.Event()
		{
			Text: "Money reserves are low! We should raise the taxes!"
			Responses:
			[
				Game.Response.Yes( )
				{
					Selected:Game.Gain(){ Stat:Money Amount:10 }
				}
				Game.Response.No()
				{
					Selected:Game.Gain(){ Stat:Popularity Amount:10 }
				}
			]
		}

		Religion: Game.Event()
		{
			Text: "We should worship a new god. Who?"
			Responses:
			[
				Game.Response()
				{
					Text: "Cthulhu"
					Selected: Events()
					[
						Game.Gain(){ Stat:Insanity Amount:10 }
						//Game.AddEvents()[ Game.Events.Cthulhu ]
					]

					Selected.Message: "There is something unresistable in worshiping deity that wants to devour you."
				}
				Game.Response()
				{
					Text: "Pink unicorn"
					Selected: Events()
					[
						Game.Gain(){ Stat:Popularity Amount:10 }
						//Game.AddEvents()[ Game.Events.PinkUnicorn ]
					]
					Selected.Message: "Unicorns are cute."
				}
			]

			Response.Tie: Game.Response()
			{
				Selected: Events()
				[
					Game.Gain(){ Stat:Insanity Amount:20 }
					Game.Gain(){ Stat:Popularity Amount:20 }
				]

				Selected.Message: "After brief consideration, you decided to worship Pink Unicorn Cthulhu."
			}
		}
	}
}
